######################
# - Conky settings - #
######################

update_interval 1
total_run_times 0
net_avg_samples 2
cpu_avg_samples 2
if_up_strictness link

imlib_cache_size 0
double_buffer yes
no_buffers yes

format_human_readable

#####################
# - Text settings - #
#####################
uppercase no
override_utf8_locale no
use_xft yes
xftfont sans-serif:normal:size=9
xftalpha 1
text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 100
own_window_type desktop
own_window_transparent yes


background yes
minimum_size 180 5
maximum_width 180
alignment br
gap_x 10
gap_y 45

#########################
# - Graphics settings - #
#########################

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color green
default_shade_color gray
default_outline_color gray
color1 yellow
color2 black
use_spacer right

##############
# - Output - #
##############

TEXT
############
# - DATE - #
############
${font size=12}$alignc${color1}$nodename${color}
${font sans-serif:size=25}$alignc${time %H:%Mh}
${voffset -20}${font sans-serif:size=9}$alignc${time %A %d %b. %Y}

##############
# - SYSTEM - #
##############
${font sans-serif:bold:size=9}${color1}SYSTEM ${color} ${hr 2}
${font}$sysname $kernel $alignr $machine
Uptime:$alignr$uptime
Processes: $processes $alignr Temp:${acpitemp}C

###########
# - CPU - #
###########
${font sans-serif:bold:size=9}${color1}CPU ${color}${cpubar}
${font}${top name 1} $alignr${top cpu 1} %
${top name 2} $alignr${top cpu 2} %
${top name 3} $alignr${top cpu 3} %

###########
# - RAM - #
###########
${font sans-serif:bold:size=9}${color1}RAM ${color}${membar}
${font}${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
${top_mem name 3}${alignr}${top mem 3} %

###########
# - I/O - #
###########
${font sans-serif:bold:size=9}${color1}I/O ${color} ${hr 2}
${font}${top_io name 1}${alignr}${top_io io_perc 1} %
${top_io name 2}${alignr}${top_io io_perc 2} %
${top_io name 3}${alignr}${top_io io_perc 3} %

###########
# - NET - #
###########
${font sans-serif:bold:size=9}${color1}NET (wlp5s0)${color} ${hr 2}
${font}Down: $alignr${downspeed wlp5s0}/s (${totaldown wlp5s0})
Up: $alignr${upspeed wlp5s0}/s (${totalup wlp5s0})

${font sans-serif:bold:size=9}${color1}NET (enp3s0)${color} ${hr 2}
${font}Down: $alignr${downspeed enp3s0}/s (${totaldown enp3s0})
Up: $alignr${upspeed enp3s0}/s (${totalup enp3s0})
