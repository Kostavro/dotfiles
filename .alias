## Common
alias mkdir="mkdir -pv"
alias l="ls -lF"
alias lss="ls -tr --color=auto -ha --group-directories-first"
alias cp="cp -ir"
alias mv="mv -i"
alias ln="ln -i"
alias du="du -ch"
alias df="df -h"

## Navigation
alias ~="cd $HOME"
alias ..="cd .."
alias ...="cd ../../"

## Network
alias myip="curl icanhazip.com"
alias ping="ping -c4"

## Update related
alias journalerrors="journalctl -b -p err"
